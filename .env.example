# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3004
HOST=0.0.0.0
APP_URL=http://localhost:3005
APP_NAME="PMS API"
FRONTEND_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres:@localhost:5432/mynestdb?schema=public

# ============================================
# JWT Authentication
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ============================================
# SMTP Email Configuration
# ============================================
SMTP_HOST=127.0.0.1
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@example.com

# ============================================
# Redis Configuration (for queues and caching)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# File Storage Configuration
# ============================================
# Storage type: 'local' or 's3'
FILE_STORAGE_TYPE=local
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# AWS S3 Configuration (if FILE_STORAGE_TYPE=s3)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# ============================================
# Security Configuration
# ============================================
# CSRF Protection (set to 'false' to disable)
CSRF_ENABLED=true

# ============================================
# gRPC Configuration
# ============================================
# Enable gRPC microservice (set to 'true' to enable)
GRPC_ENABLED=false
GRPC_PORT=5000
